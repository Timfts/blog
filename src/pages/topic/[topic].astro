---
import postTopics from "@data/post-topics.json"


export function getStaticPaths() {
    const topicsList = postTopics["topics-list"]
    return topicsList.map(topic => ({ params: { topic: topic.slug } }))
}

const { topic } = Astro.params
const posts = await Astro.glob("/src/pages/post/*.md") || []
const filteredPosts = posts.filter(post => {
    const topics = post?.frontmatter?.topics || []
    return topics.includes(topic)
})

---

<p>topic</p>
<p>{filteredPosts.map(post => (
<p>{post.frontmatter?.title}</p>))}</p>