---
import postTopics from "@content/_post-topics.json";
import TopicTemplate from "@templates/Topic/index.astro";

export function getStaticPaths() {
  const topicsList = postTopics["topics-list"];
  return topicsList.map((topic) => ({
    params: { topic: topic.slug },
    props: { topic },
  }));
}

const { topic: topicData } = Astro.props;
---

<TopicTemplate topic={topicData} />
