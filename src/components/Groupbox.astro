---
export interface Props {
  legend?: string;
  class?: string;
}

const { legend, class: className } = Astro.props;
---

<fieldset class={className}>
  {legend && <legend>{legend}</legend>}
  <slot />
</fieldset>

<style lang="scss">
  fieldset {
    border-image: var(--groupbox-border) 2;
    padding: calc(2 * var(--border-width) + var(--element-spacing));
    padding-block-start: var(--element-spacing);
    margin: 0;
    box-shadow: none;
    background: white;
    border: 1px solid #d0d0bf;
    border-radius: 4px;
    padding-top: 10px;
  }
  legend {
    background: transparent;
    color: #0046d5;
  }
</style>
