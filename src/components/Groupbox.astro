---
export type Props = {
  legend?: string;
  class?: string;
};

const { legend, class: className } = Astro.props;
---

<fieldset class={className}>
  {legend && <legend>{legend}</legend>}
  <slot />
</fieldset>

<style lang="scss">
  fieldset {
    border-image: var(--groupbox-border) 2;
    padding: calc(2 * 1px + 8px);
    padding-block-start: 8px;
    margin: 0;
    box-shadow: none;
    background: var(--theme-background);
    border: 1px solid var(--theme-fieldset-border);
    border-radius: 4px;
    padding-top: 10px;
  }
  legend {
    background: transparent;
    color: var(--theme-legend-color);
    font-size: var(--txt-xsmall);
  }
</style>
