---
import classNames from "classnames";
export interface Props {
  main?: boolean;
  background?: "dark" | "light";
  columns?: number;
  title?: string;
}

const { columns = 6, main = false, background = "dark" } = Astro.props as Props;

const componentClass = classNames("content-panel", {
  main: !!main,
  "global-metal-background": true,
  [background]: !!background,
});

const dynamicStyle = `grid-column: span ${columns};`;
---

<div class={componentClass} style={dynamicStyle}>
  <div class="content">
    <slot />
  </div>
</div>

<style lang="scss">
  .content-panel {
    background-size: 100% auto;
    padding: 10px;
    overflow: hidden;
  }

  .content-panel.main {
    padding-top: 40px;
  }

  .content {
    overflow: scroll;
    height: 100%;
    padding: 10px;
    font-size: 20px;
  }

  .dark .content {
    background-color: #000039;
  }
</style>
