---
export interface Props {
    main?: boolean;
    background?: "dark" | "light";
    columns?: number;
    title?: string;
}

const { columns = 6, main = false, background = "dark" } = Astro.props as Props;
const componentClass = `content-panel ${background} ${main ? "main" : ""} global-metal-background`;
---

<div class={componentClass} style={`grid-column: span ${columns};`}>
    <div class="content">
        <slot />
    </div>
</div>

<style lang="scss">
    .content-panel {
        background-size: 100% auto;
        padding: 10px;
        overflow: hidden;
    }

    .content {
        overflow: scroll;
        height: 100%;
        padding: 10px;
        font-size:20px;
    }

    .dark .content {
        background-color: #000039;
    }
</style>
