---
import { Picture } from "astro:assets";
import home from "./icons/home.png"
import folder from "./icons/folder.png";
import notes from "./icons/notes.png"
import projects from "./icons/projects.png"
import config from "./icons/config.png"
import contact from "./icons/contact.png"

const menuItems = [
  {
    label: "Home",
    icon: home
  },
  {
    label: "Projects",
    icon: folder
  },
  {
    label: "Posts",
    icon: notes
  },
  {
    label: "Work",
    icon: projects
  },
  {
    label: "Contact",
    icon: contact
  },
  {
    label: "Config",
    icon: config
  },
];
---

<div class="main-menu">
  <header class="header">
    <div class="avatar">
      <img
        class="avatar-image"
        src="https://avatars.githubusercontent.com/u/17283501?v=4"
        width="260"
        height="260"
      />
    </div>
    <h1 class="name">Tim Fontes</h1>
  </header>
  <div class="menu">
    <menu class="menu-content">
      {
        menuItems.map((item) => (
          <li class="menu-content-item">
            <a class="menu-content-link" href="/">
              <Picture
                class="menu-content-icon"
                width={24}
                height={24}
                formats={["webp"]}
                src={item.icon}
                alt="asdsf"
              />
              {item.label}
            </a>
          </li>
        ))
      }
    </menu>
  </div>
</div>

<style lang="scss">
  @import "./styles.scss";
</style>
