---
import Document from "./Document.astro";
import DeskHeader from "./DeskHeader/index.astro";
import ContentPanel from "./ContentPanel.astro";
export interface Props {
  title?: string;
  lang?: "pt-BR" | "en";
}

const { title = "Tim Fontes" } = Astro.props as Props;
---

<Document title={title}>
  <main class="shell-container" data-fragment="app-shell">
    <div class="app-container">
      <div class="header-slot">
        <DeskHeader />
      </div>
      <div class="body-slot" id="swup">
        <ContentPanel main columns={8}>
          <div id="hehe">batata</div>
        </ContentPanel>
        <ContentPanel columns={4} />
      </div>
      <!-- <slot /> -->
    </div>
  </main>
</Document>

<script>
  import "../logic/app.ts";
</script>
<style lang="scss">
  .shell-container {
    width: 100%;
    height: 100%;
    max-width: 1312px;
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    padding: 30px 0;
  }

  .app-container {
    color: white;
    flex: 1;
    width: 100%;
    z-index: 0;
    margin: 0 auto;
    display: flex;
    padding:0 10px;
    flex-direction: column;
  }

  .header-slot {
    height: 100px;
    flex-shrink: 0;
    flex-grow: 0;
    z-index: 2;
    margin-bottom: 15px;
    width: 100%;
  }
  .body-slot {
    width: 100%;
    flex: 1;
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 10px;
    overflow: hidden;
    grid-auto-rows: 1fr;
    z-index: 1;
  }
</style>
