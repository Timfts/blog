---
type Props = {
  class?: string;
  alt?: string;
  style?: string | astroHTML.JSX.CSSProperties;
};

const { class: className, alt, style } = Astro.props;
const loadingPlaceholder =
  "data:image/png;base64,";
---

<div class:list={["image-holder", className]} style={style}>
  <div class="loading">
    <img
      class="img-placeholder"
      src={loadingPlaceholder}
      width="16"
      height="16"
      role="presentation"
    />
    <p>{alt}</p>
  </div>
  <div class="img-slot">
    <slot />
  </div>
</div>

<style lang="scss">
  .image-holder {
    position: relative;

    &::before {
      position: absolute;
      content: "";
      inset: 0;
      display: block;
      z-index: 1;
      border: 2px solid #d3d3d3;
    }
  }

  .loading {
    display: flex;
    gap: 5px;
    padding: 10px;
    align-items: center;
    font-family: "Times New Roman", Times, serif;
    font-size: 16px;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
  }

  .img-placeholder {
    display: block;
    flex-shrink: 0;
    flex-grow: 0;
    width: 16px;
    height: 16px;
  }

  .img-slot {
    width: 100%;
    position: relative;
    z-index: 2;
  }
</style>
