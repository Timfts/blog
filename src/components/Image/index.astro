---
import { Image, LocalImageProps, RemoteImageProps } from "astro:assets";
import ImageLoader from "./ImageLoader.astro";
type Props = LocalImageProps | RemoteImageProps;

const { class: className, alt, style, ...imgProps } = Astro.props;
---

<ImageLoader class={className} alt={alt} , style={style}>
  <Image class="inner-image" alt={alt} {...imgProps} />
</ImageLoader>

<style lang="scss">
  .inner-image {
    width: 100%;
    height: unset;
  }
</style>
