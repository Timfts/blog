---
export type Props = {
  id: string;
};

const { id } = Astro.props;
---

<article class="tab-panel" role="tabpanel" id={id} hidden>
  <slot />
</article>

<style lang="scss">
  .tab-panel {
    padding: 14px;
    clear: both;
    background: var(--theme-tab-bg);
    border: var(--tab-border);
    position: relative;
    z-index: 2;
    margin-bottom: 9px;
    box-shadow: var(--theme-tab-bshadow);
  }
</style>
