---
export type Props = {
  id: string;
}

const { id } = Astro.props;
---

<article class="tab-panel" role="tabpanel" id={id} hidden>
  <slot />
</article>

<style lang="scss">
  .tab-panel {
    padding: 14px;
    clear: both;
    background: var(--tab-bg);
    border: var(--tab-border);
    position: relative;
    z-index: 2;
    margin-bottom: 9px;
    box-shadow:
      inset 1px 1px #fcfcfe,
      inset -1px -1px #fcfcfe,
      1px 2px 2px 0px rgba(208, 206, 191, 0.75);
  }
</style>
