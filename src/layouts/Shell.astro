---
import Document from "./Document.astro";
import MainNav from "@components/MainNav.astro"
export interface Props {
    title?: string;
    lang?: "pt-br" | "en"
}

const { title = "Tim Fontes" } = Astro.props as Props

---

<Document title={title}>
    <main class="shell-container" data-fragment="app-shell">
        <div class="device-frame-group">
            <div class="device-frame device-frame--top">
                <div class="device-frame__top-frame-bg" />
                <div class="device-frame__top-screen" />
            </div>
            {["left", "right"].map(side => (
            <div class={`device-frame device-frame--${side}`} />
            ))}
        </div>
        <div class="screen-layer" id="swup">
            <slot />
        </div>
        <MainNav />
    </main>
</Document>

<script>
    import "../logic/app.ts"
</script>
<style lang="scss">
    @import "../scss/mixins";

    :root {
        --app-height: 100vh;
    }

    .shell-container {
        background-color: aquamarine;
        --mobile-side-frame-size: 55px;
        --screen-layer-background: rgb(83, 83, 83);
    }

    .screen-layer {
        background-color: var(--screen-layer-background);
        padding: 70px;
        padding-top: 90px;
    }

    .device-frame {
        background-color: red;
        position: fixed;
        top: 0;

        &--top {
            width: calc(100vw - 114px);
            background-color: var(--screen-layer-background);
            left: 50%;
            transform: translate(-50%);
        }

        &--left,
        &--right {
            bottom: 0;
            width: var(--mobile-side-frame-size);
        }

        &--left {
            left: 0;
            border-right: 2px solid black;
        }

        &--right {
            right: 0;
            border-left: 2px solid black;
        }

        &__top-frame-bg {
            height: 65px;
            background-color: red;
        }

        &__top-screen {
            width: 100%;
            height: 40px;
            background-color: rgb(83, 83, 83);
            border-radius: 20px 20px 0 0;
            position: relative;
            top: -10px;
        }


    }
</style>