---
export interface Props {
    title?: string;
    lang?: "pt-br" | "en"
}

const { title = "Tim Fontes", lang = "en" } = Astro.props as Props

---

<!DOCTYPE html>
<html lang={lang}>

<head>
    <title>{title}</title>
</head>

<body>
    <main class="shell-container" data-fragment="app-shell" id="swup">
        <slot />
    </main>
</body>

</html>

<script>
    import "../logic/app.ts"
</script>

<style is:global>
    /* latin-ext */
    @font-face {
        font-family: 'VT323';
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url("/fonts/VT323-Regular.woff2") format('woff2');
        unicode-range: U+0100-024F, U+0259, U+1E00-1EFF, U+2020, U+20A0-20AB, U+20AD-20CF, U+2113, U+2C60-2C7F, U+A720-A7FF;
    }

    /* latin */
    @font-face {
        font-family: 'VT323';
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url("/fonts/VT323-Regular.woff2") format('woff2');
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
    }

    @font-face {
        font-family: 'Pixel Operator Mono';
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url("/fonts/PixelOperatorMono.woff2") format('woff2');

    }

    @font-face {
        font-family: 'Pixel Operator Mono';
        font-style: bold;
        font-weight: 700;
        font-display: swap;
        src: url("/fonts/PixelOperatorMono-Bold.woff2") format('woff2');
    }

    *,
    *::after,
    *::before {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    html {
        font-family: 'Pixel Operator Mono', sans-serif;
        letter-spacing: 0.025em;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-family: 'VT323', monospace;
        font-weight: 400;
        letter-spacing: normal;
    }
</style>
<style>
    .shell-container {
        background-color: aquamarine;
    }
</style>